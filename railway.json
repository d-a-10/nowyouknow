{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd cdn && npm ci --omit=dev && npm run build"
  },
  "deploy": {
    "startCommand": "cd cdn && npm start",
    "healthcheckPath": "/api",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}